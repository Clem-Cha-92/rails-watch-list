      <div class="yield-body">
        <div class="my-lists-header">
          <h1>My Lists</h1>
          <%= link_to "Create a movie list", new_list_path, class:"btn btn-flat" %>
        </div>

        <div class="cards">
          <% @lists.each do |list| %>
            <% if list.photo.attached? %>
              <div class="card-category-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
                <%= link_to list.name, list_path(list) %>
                <%= link_to "+", list_path(list), method: :delete, data: {confirm: "Are you sure?"}, class:"list-card-delete-button" %>
            <% else %>
              <div class="card-category-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/random')">
                <%= link_to list.name, list_path(list) %>
                <%= link_to "+", list_path(list), method: :delete, data: {confirm: "Are you sure?"}, class:"list-card-delete-button" %>
            <% end %>
            </div>
          <% end %>
        </div>
      </div>
