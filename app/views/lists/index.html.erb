

<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path 'oumgkrpswbaxot7g7v7d' %>)">
  Save any kind of movies
</div>

<div class="yield-body">
  <div class="my-lists-header">
    <h1>My Lists</h1>
    <%= link_to "Create a movie list", new_list_path, class:"btn btn-flat" %>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category-movie" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/random')">
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
</div>
